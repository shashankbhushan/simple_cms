<%= @page_title = "Subjects" %>
<div class ="subjects index">
<h2>Subjects</h2>
<%= link_to("Add New Subjects", {:action => 'new'}, :class => 'action new') %>
<div><%= pluralize(@subjects.size, 'subject')%> found</div>
<table class="lsiting" summary="Subject list">
<tr class="header">
<th>&nbsp;</th>
<th>Subject</th>
<th>Vsisible</th>
<th>Pages</th>
<th>Actions</th>
</tr>
<% @subjects.each do |subject| %>
	<tr class="<%= cycle('odd','even')%>">
		<td><%= subject.position %></td>
		<td><%= subject.name %></td>
		<td class="center"><%= status_tag(subject.visible) %> </td>
		<td class="center"><%= subject.pages.size  %> </td>
		<td class="actions">
			
			<%= link_to("Show",{:action => 'show', :id => subject.id}, :class => 'acton show') %>
			<%= link_to("Edit",{:action => 'edit', :id => subject.id}, :class => 'acton edit') %>
			<%= link_to("Delete",{:action => 'delete', :id => subject.id}, :class => 'acton delete') %>
		</td>
	</tr>
	<% end %>
	</table>
</div>