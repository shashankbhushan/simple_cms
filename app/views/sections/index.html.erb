
<div class ="Sectons index">
<h2>Sectons</h2>
<%= link_to("Add New Sectons", {:action => 'new'}, :class => 'action new') %>

<table class="lsiting" summary="Secton list">
<tr class="header">
<th>&nbsp;</th>
<th>Page ID</th>
<th>Secton</th>
<th>Content Type</th>
<th>Visible</th>
<th>Actions</th>
</tr>
<% @section.each do |section| %>
	<tr>
		<td><%= section.position %></td>
		<td><%= section.page_id %></td>
		<td><%= section.name %></td>
		<td><%= section.content_type %></td>
		<td class="center"><%= status_tag(section.visible) %> </td>
		<td class="actions">
			
			<%= link_to("Show",{:action => 'show', :id => section.id}, :class => 'acton show') %>
			<%= link_to("Edit",{:action => 'edit', :id => section.id}, :class => 'acton edit') %>
			<%= link_to("Delete",{:action => 'delete', :id => section.id}, :class => 'acton delete') %>
		</td>
	</tr>
	<% end %>
	</table>
</div>