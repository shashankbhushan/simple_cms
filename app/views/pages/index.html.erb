
<div class ="pages index">
<h2>Pages</h2>
<%= link_to("Add New Pages", {:action => 'new'}, :class => 'action new') %>

<table class="lsiting" summary="Page list">
<tr class="header">
<th>&nbsp;</th>
<th>Subject</th>
<th>Page</th>
<th>Permalink</th>
<th>Visible</th>
<th>Sections</th>
<th>Actions</th>
</tr>
<% @page.each do |page| %>
	<tr>
		<td><%= page.position %></td>
		<td><%= page.subject_id %></td>
		<td><%= page.name %></td>
		<td><%= page.permalink %></td>
		<td class="center"><%= status_tag(page.visible)%> </td>
		<td class="center"><%= page.sections.size  %> </td>
		<td class="actions">
			
			<%= link_to("Show",{:action => 'show', :id => page.id}, :class => 'acton show') %>
			<%= link_to("Edit",{:action => 'edit', :id => page.id}, :class => 'acton edit') %>
			<%= link_to("Delete",{:action => 'delete', :id => page.id}, :class => 'acton delete') %>
		</td>
	</tr>
	<% end %>
	</table>
</div>